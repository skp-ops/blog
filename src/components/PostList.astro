---
import type { CollectionEntry } from 'astro:content'
import { getPostPath } from '@/i18n/path'
import { getPostDescription } from '@/utils/description'

type Post = CollectionEntry<'posts'> & {
  remarkPluginFrontmatter: {
    minutes: number
  }
}

const { posts, lang } = Astro.props

export interface Props {
  posts: Post[]
  lang: string
  pinned?: boolean
}
---

<div class="grid grid-cols-1 gap-6">
  {posts.map((post) => {
    const slug = post.data.abbrlink || post.id
    const url = getPostPath(slug, lang)

    return (
      <a
        href={url}
        class="card-base group bg-bg-secondary hover:bg-bg-tertiary block rounded-lg p-6 shadow-md transition-all hover:shadow-xl hover:-translate-y-1"
        data-astro-prefetch
      >
        <article>
          <h2
            class="group-hover:text-accent mb-2 text-xl font-bold transition-colors"
            transition:name={`post-${slug}${lang ? `-${lang}` : ''}`}
            data-disable-theme-transition
          >
            {post.data.title}
          </h2>
          <p class="text-sm opacity-80">
            {getPostDescription(post, 'list')}
          </p>
        </article>
      </a>
    )
  })}
</div>
