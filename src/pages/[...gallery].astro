---
import { getCollection } from 'astro:content'
import { defaultLocale, moreLocales } from '@/config'
import Layout from '@/layouts/Layout.astro'

export async function getStaticPaths() {
  type PathItem = {
    params: { gallery: string }
    props: { lang: string }
  }

  const paths: PathItem[] = []

  // Default locale
  paths.push({
    params: { gallery: 'gallery/' },
    props: { lang: defaultLocale },
  })

  // More locales
  moreLocales.forEach((lang: string) => {
    paths.push({
      params: { gallery: `${lang}/gallery/` },
      props: { lang },
    })
  })

  return paths
}

const { lang } = Astro.props
const photos = await getCollection('photos')

// Sort photos by date (newest first)
const sortedPhotos = photos.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
)

// (Dates are now formatted in the zoom overlay component)

// Get translation text
const translations = {
  en: { title: 'Gallery', totalPhotos: 'Total', photos: 'photos' },
  zh: { title: '画廊', totalPhotos: '共', photos: '张照片' },
  ja: { title: 'ギャラリー', totalPhotos: '合計', photos: '枚の写真' },
}
const t = translations[lang as keyof typeof translations] || translations.en
---

<Layout>
  <div class="gallery-page">
    <h1 class="gallery-title">{t.title}</h1>
    <p class="gallery-desc">
      {t.totalPhotos} {sortedPhotos.length} {t.photos}
    </p>

    <div class="gallery-grid">
      {sortedPhotos.map(photo => (
        <div class="gallery-item" data-photo-id={photo.id}>
          <div class="gallery-card">
            <div class="gallery-image-wrapper">
              <img
                src={photo.data.thumbnail || photo.data.image}
                alt={photo.data.title}
                class="gallery-image"
                loading="lazy"
                data-full-image={photo.data.image}
                data-title={photo.data.title}
                data-location={photo.data.location}
                data-description={photo.data.description}
                data-date={new Date(photo.data.date).toISOString()}
              />
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .gallery-page {
    width: 100%;
  }

  .gallery-title {
    font-size: 1.75rem;
    font-weight: bold;
    color: oklch(var(--un-preset-theme-colors-primary));
    margin-bottom: 0.75rem;
  }

  @media (min-width: 1024px) {
    .gallery-title {
      font-size: 2rem;
    }
  }

  .gallery-desc {
    font-size: 0.875rem;
    color: oklch(var(--un-preset-theme-colors-secondary));
    margin-bottom: 2.5rem;
  }

  @media (min-width: 1024px) {
    .gallery-desc {
      margin-bottom: 3rem;
    }
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  .gallery-item {
    break-inside: avoid;
    page-break-inside: avoid;
  }

  .gallery-card {
    position: relative;
    overflow: hidden;
    border-radius: 1.5rem; /* 24px */
    backdrop-filter: blur(14px) saturate(120%);
    background: oklch(var(--un-preset-theme-colors-secondary) / 0.06);
    border: 1px solid oklch(var(--un-preset-theme-colors-secondary) / 0.12);
    transition: transform 0.35s ease, box-shadow 0.35s ease, border-color 0.35s ease;
    box-shadow: 0 8px 30px oklch(var(--un-preset-theme-colors-secondary) / 0.12);
  }

  .gallery-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 16px 40px oklch(var(--un-preset-theme-colors-secondary) / 0.18);
    border-color: oklch(var(--un-preset-theme-colors-secondary) / 0.18);
  }

  .gallery-image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 1.5rem; /* full card */
    cursor: zoom-in;
    background: oklch(var(--un-preset-theme-colors-secondary) / 0.04);
  }

  .gallery-image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.6s ease; /* smoother iOS feel */
  }

  .gallery-card:hover .gallery-image {
    transform: scale(1.04);
  }

  /* Thumbnail cards now only show the image (no captions) */
</style>

<script>
  // Handle image click for zoom
  document.addEventListener('astro:page-load', () => {
    const images = document.querySelectorAll('.gallery-image')

    images.forEach((img) => {
      img.addEventListener('click', (e) => {
        const target = e.target as HTMLImageElement
        const fullImage = target.getAttribute('data-full-image')

        // If full image URL exists, replace the src temporarily for zoom
        if (fullImage && fullImage !== target.src) {
          const originalSrc = target.src
          target.src = fullImage

          // Wait for ImageZoom overlay to be created and observe it
          const setupObserver = () => {
            const zoomOverlay = document.querySelector('.zoom-overlay') as HTMLElement
            if (!zoomOverlay) {
              return
            }

            // Restore original after zoom closes
            const observer = new MutationObserver(() => {
              try {
                if (!zoomOverlay || zoomOverlay.style.display === 'none') {
                  target.src = originalSrc
                  observer.disconnect()
                }
              }
              catch {
                observer.disconnect()
              }
            })

            observer.observe(zoomOverlay, { attributes: true, attributeFilter: ['style'] })
          }

          // Use requestAnimationFrame to wait for overlay creation
          requestAnimationFrame(() => {
            requestAnimationFrame(() => {
              setupObserver()
            })
          })
        }
      })
    })
  })
</script>
