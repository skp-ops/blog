---
import { getCollection } from 'astro:content'
import { defaultLocale, moreLocales } from '@/config'
import Layout from '@/layouts/Layout.astro'

export async function getStaticPaths() {
  type PathItem = {
    params: { gallery: string }
    props: { lang: string }
  }

  const paths: PathItem[] = []

  // Default locale
  paths.push({
    params: { gallery: 'gallery/' },
    props: { lang: defaultLocale },
  })

  // More locales
  moreLocales.forEach((lang: string) => {
    paths.push({
      params: { gallery: `${lang}/gallery/` },
      props: { lang },
    })
  })

  return paths
}

const { lang } = Astro.props
const photos = await getCollection('photos')

// Sort photos by date (newest first)
const sortedPhotos = photos.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
)

// Get translation text
const translations = {
  en: { title: 'Gallery', totalPhotos: 'Total', photos: 'photos' },
  zh: { title: '相册', totalPhotos: '共', photos: '张照片' },
  ja: { title: 'ギャラリー', totalPhotos: '合計', photos: '枚の写真' },
}
const t = translations[lang as keyof typeof translations] || translations.en
---

<Layout>
  <div class="gallery-page">
    <h1 class="gallery-title">{t.title}</h1>
    <p class="gallery-desc">
      {t.totalPhotos} {sortedPhotos.length} {t.photos}
    </p>

    <div class="gallery-grid">
      {sortedPhotos.map(photo => (
        <div class="gallery-item" data-photo-id={photo.id}>
          <img
            src={photo.data.thumbnail || photo.data.image}
            alt={photo.data.title}
            class="gallery-image"
            loading="lazy"
            data-full-image={photo.data.image}
            data-photo-title={photo.data.title}
            data-photo-description={photo.data.description || ''}
            data-photo-location={photo.data.location || ''}
            data-photo-tags={photo.data.tags?.join(', ') || ''}
          />
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .gallery-page {
    width: 100%;
  }

  .gallery-title {
    font-size: 1.75rem;
    font-weight: bold;
    color: oklch(var(--un-preset-theme-colors-primary));
    margin-bottom: 0.75rem;
  }

  @media (min-width: 1024px) {
    .gallery-title {
      font-size: 2rem;
    }
  }

  .gallery-desc {
    font-size: 0.875rem;
    color: oklch(var(--un-preset-theme-colors-secondary));
    margin-bottom: 2.5rem;
  }

  @media (min-width: 1024px) {
    .gallery-desc {
      margin-bottom: 3rem;
    }
  }

  .gallery-grid {
    columns: 1;
    column-gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .gallery-grid {
      columns: 2;
      column-gap: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .gallery-grid {
      columns: 3;
      column-gap: 2rem;
    }
  }

  .gallery-item {
    break-inside: avoid;
    page-break-inside: avoid;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 640px) {
    .gallery-item {
      margin-bottom: 1.75rem;
    }
  }

  @media (min-width: 1024px) {
    .gallery-item {
      margin-bottom: 2rem;
    }
  }

  .gallery-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 0.5rem;
    cursor: zoom-in;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px oklch(var(--un-preset-theme-colors-secondary) / 0.1);
  }

  .gallery-image:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px oklch(var(--un-preset-theme-colors-secondary) / 0.2);
  }
</style>

<script>
  // Custom gallery zoom with info panel
  document.addEventListener('astro:page-load', () => {
    const images = document.querySelectorAll('.gallery-image')
    let infoPanel: HTMLElement | null = null
    let zoomOverlay: HTMLElement | null = null

    images.forEach((img) => {
      img.addEventListener('click', (e) => {
        e.stopPropagation()
        const target = e.target as HTMLImageElement

        // Get photo metadata
        const title = target.getAttribute('data-photo-title') || ''
        const description = target.getAttribute('data-photo-description') || ''
        const location = target.getAttribute('data-photo-location') || ''
        const tags = target.getAttribute('data-photo-tags') || ''

        // Create or get overlay
        zoomOverlay = document.querySelector('.gallery-zoom-overlay') as HTMLElement
        if (!zoomOverlay) {
          zoomOverlay = document.createElement('div')
          zoomOverlay.className = 'gallery-zoom-overlay'
          document.body.appendChild(zoomOverlay)
        }

        // Create info panel
        infoPanel = document.createElement('div')
        infoPanel.className = 'gallery-info-panel'
        
        // Build info panel with escaped content
        const titleEl = document.createElement('h2')
        titleEl.className = 'info-title'
        titleEl.textContent = title
        infoPanel.appendChild(titleEl)

        if (description) {
          const descEl = document.createElement('p')
          descEl.className = 'info-description'
          descEl.textContent = description
          infoPanel.appendChild(descEl)
        }

        if (location) {
          const locEl = document.createElement('p')
          locEl.className = 'info-location'
          locEl.innerHTML = '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>'
          locEl.appendChild(document.createTextNode(location))
          infoPanel.appendChild(locEl)
        }

        if (tags) {
          const tagList = tags.split(', ').filter(t => t)
          if (tagList.length > 0) {
            const tagsContainer = document.createElement('div')
            tagsContainer.className = 'info-tags'
            tagList.forEach((tag) => {
              const tagEl = document.createElement('span')
              tagEl.className = 'info-tag'
              tagEl.textContent = tag
              tagsContainer.appendChild(tagEl)
            })
            infoPanel.appendChild(tagsContainer)
          }
        }
        
        zoomOverlay.appendChild(infoPanel)

        // Clone and position image
        const fullImage = target.getAttribute('data-full-image') || target.src
        const zoomedImg = document.createElement('img')
        zoomedImg.src = fullImage
        zoomedImg.alt = title
        zoomedImg.className = 'gallery-zoomed-image'
        zoomOverlay.appendChild(zoomedImg)

        // Show overlay
        document.body.style.overflow = 'hidden'
        zoomOverlay.style.display = 'flex'
        requestAnimationFrame(() => {
          zoomOverlay!.classList.add('active')
        })

        // Close on click outside image and info panel
        const closeHandler = (e: MouseEvent) => {
          const clickedImage = (e.target as HTMLElement).closest('.gallery-zoomed-image')
          const clickedPanel = (e.target as HTMLElement).closest('.gallery-info-panel')
          
          if (!clickedImage && !clickedPanel) {
            closeZoom()
          }
        }

        const closeZoom = () => {
          if (!zoomOverlay)
            return
          zoomOverlay.classList.remove('active')
          setTimeout(() => {
            if (zoomOverlay) {
              zoomOverlay.style.display = 'none'
              zoomOverlay.innerHTML = ''
            }
            document.body.style.overflow = ''
          }, 300)
          zoomOverlay.removeEventListener('click', closeHandler)
        }

        zoomOverlay.addEventListener('click', closeHandler)
      })
    })
  })
</script>

<style is:global>
  .gallery-zoom-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: oklch(var(--un-preset-theme-colors-background) / 0.98);
    backdrop-filter: blur(20px);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    cursor: zoom-out;
    padding: 2rem;
  }

  .gallery-zoom-overlay.active {
    opacity: 1;
  }

  .gallery-zoomed-image {
    max-width: 60%;
    max-height: 90vh;
    object-fit: contain;
    border-radius: 0.5rem;
    box-shadow: 0 20px 60px oklch(var(--un-preset-theme-colors-secondary) / 0.3);
    cursor: default;
  }

  @media (max-width: 1023px) {
    .gallery-zoomed-image {
      max-width: 100%;
    }
  }

  .gallery-info-panel {
    position: fixed;
    right: 2rem;
    top: 50%;
    transform: translateY(-50%);
    width: 320px;
    max-height: 80vh;
    overflow-y: auto;
    background: oklch(var(--un-preset-theme-colors-background) / 0.9);
    backdrop-filter: blur(20px);
    border: 1px solid oklch(var(--un-preset-theme-colors-secondary) / 0.2);
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 10px 40px oklch(var(--un-preset-theme-colors-secondary) / 0.2);
    cursor: default;
  }

  @media (max-width: 1023px) {
    .gallery-info-panel {
      position: static;
      transform: none;
      width: 100%;
      max-width: 400px;
      margin-top: 2rem;
    }

    .gallery-zoom-overlay {
      flex-direction: column;
      overflow-y: auto;
    }
  }

  .info-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: oklch(var(--un-preset-theme-colors-primary));
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .info-description {
    font-size: 0.9375rem;
    color: oklch(var(--un-preset-theme-colors-secondary));
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }

  .info-location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: oklch(var(--un-preset-theme-colors-secondary) / 0.8);
    margin-bottom: 1.25rem;
  }

  .info-location svg {
    width: 1.125rem;
    height: 1.125rem;
    flex-shrink: 0;
  }

  .info-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .info-tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    border-radius: 9999px;
    background: oklch(var(--un-preset-theme-colors-secondary) / 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid oklch(var(--un-preset-theme-colors-secondary) / 0.15);
    color: oklch(var(--un-preset-theme-colors-secondary));
    font-size: 0.8125rem;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .info-tag:hover {
    background: oklch(var(--un-preset-theme-colors-secondary) / 0.2);
    border-color: oklch(var(--un-preset-theme-colors-secondary) / 0.3);
    transform: translateY(-1px);
  }
</style>
